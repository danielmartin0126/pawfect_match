      </li>
      <li class="nav-item">
          <a class="nav-link" href="/users">Users</a>
        </li>
      <li class="nav-item">

          <a class="nav-link" data-method="delete" href="/logout">Logout</a>
          <%else%>
          <%end%>
      </li>
      </ul>
  </nav>

    <div class="all"

