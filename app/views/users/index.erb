<h1 class="center-text"> All Pets </h1>
<h3 class="text">Find a Match By:</h3>

<div class="text">
    <%=form_tag(users_path, method: :get) do %>
    <label>Species:</label>
    <%= select_tag "species", options_from_collection_for_select(@pets, "species", "species") %><br>
    <%= label_tag "Gender:" %>
    <%= label_tag "Female" %>
    <%=radio_button_tag 'gender', 'Female' %>
    <%= label_tag "Male" %>
    <%=radio_button_tag 'gender',  'Male' %><br>
    <%=submit_tag "Search", name: nil %>
    <% end %><br> <br>
  </div>


<div  class="center-text">
<a href="/users" class="all">View All</a>
</div>

<div class="flex-container">
<%@users.each do |user| %>
<div class="flex-item">
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <a href="/users/<%=user.id%>">  <img src=<%=user.profile_pic%> class="img-fluid"></a>
    <h5><%= link_to user.name, user_path(user) %></h5>
  </div>
  </div>
</div>
    <% end %>
</div>
