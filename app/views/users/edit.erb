<h1 class="text-label">Update Account</h1><br><br>
<div class="text">
    <%=form_for @user do |f|%>
  <div class="row">
    <div class="col-3">
    <%=f.label "Age:"%><br>
    <%=f.number_field :age%><br><br>
    <%=f.label "Interests:"%><br>
    <%=f.text_field :interests%>
    </div>
    <div class="col-3">
    <%=f.label "Gender:"%><br>
    <%= f.select :gender, ["Female", "Male"] %><br><br>
    <label>Favorite Treat:</label>
    <%=f.text_field :fav_food%>
    </div>
    <div class="col-3">
    <%=f.label "Species:"%><br>
    <%=f.text_field :species%><br><br>
    <%=f.label "Profile Picture:"%><br>
    <%=f.text_field :profile_pic%>
    </div>
    <div class="col-3">
    <%=f.label "Quote:"%><br>
    <%=f.text_field :quote%><br><br><br>
    <%=f.submit class: "btn btn-primary"%>
    </div>

  </div>
  <% end %>
  </div>
