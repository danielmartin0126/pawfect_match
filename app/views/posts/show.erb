<div class="row">
<div class="col center-text">

<img src="<%= @post.image_url%>"><br>
<h3 class="text"><%=@post.caption%></h3>
</div>
</div><br>
<br>
<div class="detailBox">
    <div class="titleBox">
      <label>Comments</label>

    </div>

    <div class="actionBox">
        <ul class="commentList">
            <%@comments.each do |comment| %>
            <% if comment.post_id == @post.id%>
            <li>
                <div class="commenterImage">
                  <img src="<%=User.find(comment.commenter_id).profile_pic%>" />
                </div>
                <div class="commentText">
                    <p class=""><%=comment.comment%></p> <span class="date sub-text"><%=comment.created_at%></span>
                </div>
            </li>
            <%end%>
            <%end%>
        </ul>
        <div class="profile">
          <%if current_user == @user%>
          <%=link_to "Add Comment", new_comment_path(:post => {:post_id => @post.id}), class: "btn btn-primary"%>
          <% end %>
          </div>
    </div>
    </div>
    <br>
    <br>
    <br>
    <br>
<br>
<br>
<br>
<br>
<%=button_to "Back to #{@user.name}'s Purr-file'",user_path(@user), class: "btn btn-primary", method: :get%>

<div class="col profile">
  <%if current_user == @user%>
  <%= button_to "Update Post", edit_post_path, class: "btn btn-primary", method: :get%>
  <% end %>
<%= button_to "Delete Post", @post, class: "btn btn-danger", method: :delete, data: { confirm: "Delete post?" } %><br>
