<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<%= error %><br>
<% end %>
<% end %>

<%=form_for @comment do |f|%>
<%=f.label "Comment:"%>
<%=f.text_area :comment%><br>
<%=f.label "User Name:"%>
<%= f.collection_select(:commenter_id, @users, :id, :name, prompt: true) %><br><br>
<%= f.hidden_field :post_id, value: params["post"]["post_id"] %>
<%=f.submit%>
<% end %>
